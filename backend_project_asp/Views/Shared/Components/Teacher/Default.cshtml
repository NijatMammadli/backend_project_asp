
@{
    List<Teacher> teachers = Model;

}


        
            @foreach (var teacher in teachers)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-action="Details" asp-route-id="@teacher.Id"><img src="~/img/teacher/@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-action="Details" asp-route-id="@teacher.Id">@teacher.Name</a></h2>
                            <h4>@teacher.Position.PositionName</h4>
                            <ul>
                                @foreach (var item in teacher.socialMedias)
                                {
                                    <li><a href="@item.Link"><i class="@item.Icon"></i></a></li>

                                }

                            </ul>
                        </div>
                    </div>
                </div>

            }

      
