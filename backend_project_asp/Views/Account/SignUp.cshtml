@model RegisterViewModel
@{
    ViewData["Title"] = "Register";

}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Sign Up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>Sign Up</h2>
                            <span>Please SignUp</span>
                        </div>
                        <div asp-validation-summary="ModelOnly">

                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="form-group">
                                    <input asp-for="Fullname" placeholder="Fullname">
                                    <span asp-validation-for="Fullname" class="text-danger"> </span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Username" placeholder="Username">
                                    <span asp-validation-for="Username" class="text-danger"> </span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Email" placeholder="EmailAdress">
                                    <span asp-validation-for="Email" class="text-danger"> </span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Password" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"> </span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"> </span>
                                </div>
                                <div class="form-check">
                                    <div class="button-box">

                                        <button type="submit" class="default-btn">Sign Up</button>

                                    </div>

                                </div>
                                <div class="text-center mt-4 font-weight-bold">
                                    Already have an account?

                                    <a asp-action="Login">Login</a>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end -->


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
