@{
    ViewData["Title"] = "Index";
    List<Teacher> teachers = Model;
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">teachers</h4>
                <a asp-controller="SocialMedia" asp-action="Create"> Create Link</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var teacher in teachers)
                            {
                                <tr>
                                    <td>
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary w-100" data-toggle="modal" data-target="#exampleModal-@teacher.Id">
                                            @teacher.Name
                                        </button>

                                        <!-- Modal -->
                                        <div class="modal fade" id="exampleModal-@teacher.Id" tabindex="-1" aria-labelledby="exampleModal-@teacher.Id-Label" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content" style="width:800px;">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Social Medias </h5>
                                                    </div>
                                                    <div class="modal-body">
                                                        @foreach (var item in teacher.socialMedias)
                                                        {
                                                            <div class="row d-flex justify-content-between align-items-center mb-3">
                                                                <div class="col-7">
                                                                    <div class="row d-flex justify-content-between align-items-center">
                                                                        <div class="col-2 myIcon">
                                                                            @Html.Raw(item.Icon) :
                                                                        </div>
                                                                        <div class="col-10">
                                                                            @item.Link
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-5">
                                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detail</a>
                                                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                                                </div>
                                                            </div>

                                                        }
                                                    </div>
                                                    <div class="modal-footer">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    @*<td>
                                            <a asp-action="Details" asp-route-id="@teacher.Id" class="btn btn-success">Detail</a>
                                            <a asp-action="Update" asp-route-id="@teacher.Id" class="btn btn-warning">Update</a>
                                            <a asp-action="Delete" asp-route-id="@teacher.Id" class="btn btn-danger">Delete</a>
                                        </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>









