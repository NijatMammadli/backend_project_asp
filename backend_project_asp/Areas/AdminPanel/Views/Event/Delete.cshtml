@model Event
@{
    ViewData["Title"] = "Delete";
}

<div class="col-md-8">
    <div class="courses-details">
        <div class="courses-details-img">
            <img src="~/img/event/@Model.Image" alt="courses-details">
        </div>
        <div class="course-details-content">
            <h2>@Model.Name</h2>
            <p>@Model.StartTime.ToString("dd MMMM yyyy")</p>
            <div class="course-details-left">
                <div class="single-course-left">
                    <h3>Description</h3>
                    <p>@Model.EventDetail.Description</p>
                </div>
                <div class="single-course-left">
                    <h3>Venue</h3>
                    <p>@Model.EventDetail.DetailedVenue</p>
                </div>

            </div>
            <div>
                <h4>category</h4>


                <ul>
                    @foreach (Category item in ViewBag.categories)
                    {
                        if (Model.EventCategories.Any(x => x.CategoryId == item.Id))
                        {

                            <li selected value="@item.Id">@item.Name</li>

                        }
                    }
                </ul>

            </div>
            <div>
                <h4>speakers</h4>


                <ul>
                    @foreach (var item in ViewBag.Spikers)
                    {
                        if (Model.EventSpeakers.Any(x => x.SpeakerId == item.Id))
                        {

                            <li selected value="@item.Id">@item.Name</li>

                        }
                    }
                </ul>

            </div>
        </div>

    </div>

</div>


<div class="row">
    <a asp-action="Index" class="btn btn-primary">Go Back</a>
    <form method="post">
        <button type="submit" class="btn btn-danger mr-2">Delete</button>
    </form>
</div>

