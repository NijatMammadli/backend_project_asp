@{
    ViewData["Title"] = "Index";
    List<Event> events = Model;
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Events</h4>
                <a asp-controller="Event" asp-action="Create"> Create Event</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Fee</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in events)
                            {
                                <tr>
                                    <td><img width="150" height="150" src="~/img/event/@item.Image" /></td>
                                    <td>@item.Name</td>
                                    <td>@item.EventDetail.DetailedVenue</td>
                                    <td>@item.StartTime.ToString("dd"): @item.StartTime.ToString("hh:mm tt") - @item.EndTime.ToString("hh:mm tt") </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detail</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>







