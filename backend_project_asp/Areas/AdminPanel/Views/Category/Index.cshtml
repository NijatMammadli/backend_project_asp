@{
    ViewData["Title"] = "Index";
    List<Category> categories = Model;
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <a asp-controller="Category" asp-action="Create"> Create Category</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                               
                                <th>Name</th>
                               
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in categories)
                            {
                                <tr>
                                   
                                    <td>@category.Name</td>
                                   
                                    <td>
                                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-success">Detail</a>
                                        <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>











