@model Speaker
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Speaker</h4>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Position">Position</label>
                        <textarea asp-for="Position" class="form-control" placeholder="Position" row="3"></textarea>
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Company"></label>
                        <input asp-for="Company" class="form-control">
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>

                    <div class="form-group " id="photoInput">
                        <label asp-for="Photo">Images</label>
                        <input asp-for="Photo" class="form-control" accept="image/*" />
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>



                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>



