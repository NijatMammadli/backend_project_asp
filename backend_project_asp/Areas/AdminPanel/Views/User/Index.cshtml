
@{
    ViewData["Title"] = "Index";
    List<UserViewModel> users = Model;
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Fullname</th>
                                <th>Username</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>IsActive</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in users)
                            {
                            <tr>
                                <td>@user.Fullname</td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                @if (user.IsDeactive == true)
                                {
                                    <td>Deactive</td>

                                }
                                else
                                {
                                    <td>Active</td>

                                }
                                <td>@user.Role</td>
                                <td>
                                    @if (User.Identity.Name != user.Username)
                                    {


                                        @if (!user.IsDeactive)
                                        {
                                            <a asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-warning">ChangeRole</a>

                                        }
                                        @if (user.IsDeactive)
                                        {

                                            <a asp-action="Activated" asp-route-id="@user.Id" class="btn btn-success">Activated</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Activated" asp-route-id="@user.Id" class="btn btn-danger">DeActivated</a>
                                        }


                                    }
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






