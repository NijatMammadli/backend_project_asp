@model Course
@{
    ViewData["Title"] = "Detail";
}

<div class="col-md-8">
    <div class="courses-details">
        <div class="courses-details-img">
            <img src="~/img/course/@Model.Image" alt="courses-details">
        </div>
        <div class="course-details-content">
            <h2>@Model.Name</h2>
            <p>@Model.Description</p>
            <div class="course-details-left">
                <div class="single-course-left">
                    <h3>about course</h3>
                    <p>@Model.CourseDetail.AboutCourse</p>
                </div>
                <div class="single-course-left">
                    <h3>how to apply</h3>
                    <p>@Model.CourseDetail.HowToApply</p>
                </div>
                <div class="single-course-left">
                    <h3>certification</h3>
                    @Html.Raw(Model.CourseDetail.Certification)

                </div>




            </div>
            <div>
                <h4>category</h4>
                
              
                    <ul>
                        @foreach (Category item in ViewBag.categories)
                        {
                            if (Model.CourseCategories.Any(x => x.CategoryId == item.Id))
                            {

                                <li selected value="@item.Id">@item.Name</li>

                            }
                        }
                        </ul>
                  
                    </div>
                  
                 
            </div>
            <div class="course-details-right">
                <h3>COURSE FEATURES</h3>
                <ul>
                    <li>starts <span>@Model.CourseDetail.Starts.ToString("dd MMMM, yyyy")</span></li>
                    <li>duration <span>@Model.CourseDetail.Duration</span></li>
                    <li>class duration <span>@Model.CourseDetail.ClassDuration</span></li>
                    <li>skill level <span>@Model.CourseDetail.SkillLevel</span></li>
                    <li>language <span>@Model.CourseDetail.Language</span></li>
                    <li>students <span>@Model.CourseDetail.Students</span></li>
                    <li>assesments <span>@Model.CourseDetail.Assesments</span></li>
                </ul>
                <h3 class="red">course fee $@Model.CourseDetail.CourseFee</h3>
            </div>
        </div>
       
    </div>


<div class="row">
    <a asp-action="Index" class="btn btn-primary">Go Back</a>

</div>


